<component name="ExitConfirmationModal" extends="Group">
    <interface>
        <function name="setFocus" />
    </interface>

    <children>
        <Rectangle id="dimmer" width="1920" height="1080" color="#000000" />

        <Poster id="logo" width="762" height="511" translation="[579, 90]" uri="pkg:/images/views/video/exit_screen_logo.webp" />
        <AppLabel id="message" width="1920" translation="[0, 634]" text="Ready to extract?" fontStyle="BOLD" fontSize="87" color="#FFFFFF" horizAlign="center" />

